<Alloy>
	<ScrollView id="container">
		
		<View class="blank"/>
		
		<View class="absolute white">
			<Label id="username"/>
		</View>
		
		<View class="separator"/>
		
		<TextField id="account_alias" onFocus="normalize" onReturn="next"/>
		<TextField id="cell_phone" onFocus="normalize" onReturn="next"/>
		<TextField id="home_phone" onFocus="normalize" onReturn="next"/>
		<TextField id="work_phone" onFocus="normalize" onReturn="next" class="bottom_space"/>
		
		<View class="separator"/>
		
		<View class="absolute white">
			<Label id="tag_password"/>
		</View>
		
		<View class="separator"/>

		<TextField id="password" onFocus="normalize" onReturn="next"/>
		<TextField id="confirm_password" onFocus="normalize" onReturn="next" class="bottom_space"/>
		
		<View class="separator"/>
		
		<View class="absolute white">
			<Label id="tag_promocode"/>
		</View>
		
		<View class="separator"/>
		
		<View class="block">
			<TextField id="promocode" onFocus="normalize"/>
		</View>
		
		<View class="blank"/>
		
	</ScrollView>
</Alloy>