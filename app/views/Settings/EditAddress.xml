<Alloy>
	<ScrollView id="container" class="container">
		<View class="blank"></View>
		<View class="absolute white">
			<Label textid="alias" class="title"></Label>
		</View>
		<View class="separator"></View>
		<TextField id="faname" class="bottom_space"></TextField>
		<View class="separator"></View>
		<View class="absolute white" onClick="pickPlace">
			<Label textid="place" class="select_title"></Label>
			<Label id="faplace" class="option"></Label>
			<ImageView class="arr_down"></ImageView>
		</View>
		<View class="separator"></View>
		<View class="absolute white">
			<Label textid="address" class="title"></Label>
		</View>
		<View class="separator"></View>
		<TextField id="faaddress"></TextField>
		<TextField id="facity"></TextField>
		<TextField id="fapostal" class="bottom_space"></TextField>
		<View class="separator"></View>
		<View class="absolute white" onClick="pickCountry">
			<Label textid="country" class="select_title"></Label>
			<Label id="facountry" class="option"></Label>
			<ImageView class="arr_down"></ImageView>
		</View>
		<View class="separator"></View>
		<View id="state_row_picker" class="vertical" onClick="pickState">
			<View class="absolute white">
				<Label textid="state" class="select_title"></Label>
				<Label id="fastate" class="option"></Label>
				<ImageView class="arr_down"></ImageView>
			</View>
		</View>
		<View id="state_row_field" class="vertical">
			<TextField id="fastate_field" class="bottom_space"></TextField>
		</View>
		<View class="separator"></View>
		<View class="absolute white">
			<Label textid="send_alerts"></Label>
			<Switch id="faenable"></Switch>
		</View>
		<View class="separator"></View>
		<Button id="delete_btn" onClick="confirmDelete"></Button>
		<View class="blank"></View>
	</ScrollView>
</Alloy>