<Alloy>
	<ScrollView class="containerProfile" id="mainContainerProfile">
			<View class="blank"></View>
			<View  class="layoutHorizontal">
				<!--ImageView id="photoProfile"></ImageView-->
				<View id="avatar_view" class="avatar">
                    <ScrollView class="avatar">
                    	<ImageView id="photoProfile"/>
                    </ScrollView>
                    <ImageView id="avatar_mask" class="avatar"/>
                </View>
				<View id="" class="layoutVertical">
					<View id="actionsContainer"  onClick="actionsClick">
						<Button class="trashButton" id="deleteBtn" id_profile=""></Button>
						<Button class="helpButton"  id="helpBtn" id_profile=""></Button>
						<Button class="shareButton" id="shareBtn" id_profile="" photo="" blobImage="" imgType=""></Button>
					</View>
					<Label id="nameLbl" text="Pet's Name" class="labelTitle"></Label>
					<TextField id="nameProfile" hintText="Name" class="inputProfile"></TextField>
					<TextField id="typeProfile" hintText="Type (Dog,Cat, Other)" class="inputProfile"></TextField>
					<TextField id="breedProfile" hintText="Breed" class="inputProfile"></TextField>
				</View>
			</View>
			<View class="layoutHorizontal">
				<TextField id="ageProfile" hintText="Age" class="inputProfile"></TextField>
				<TextField id="sexProfile" hintText="Sex (M/F)" class="inputProfile"></TextField>
				<TextField id="colorProfile" hintText="Color" class="inputProfile"></TextField>
				<TextField id="weightProfile" hintText="Weight" class="inputProfile"></TextField>
				<TextField id="microchipProfile" hintText="Microchip #" class="inputProfile"></TextField>
				<TextField id="identifyingProfile" hintText="Markings" class="inputProfile"></TextField>
				<TextArea id="specialsProfile" hintText="Spec" ></TextArea>
				<Label id="contactLbl" text="Owner Information" class="labelTitle" ></Label>
				<TextField id="firstNameProfile" hintText="First Name" class="inputProfile"></TextField>
				<TextField id="lastNameProfile" hintText="Last Name" class="inputProfile"></TextField>
				<TextField id="addressOwnerProfile" hintText="Address" class="inputProfile"></TextField>
				<TextField id="homePhoneProfile" hintText="Home Phone" class="inputProfile"></TextField>
				<TextField id="cellPhoneProfile" hintText="Cell Phone" class="inputProfile"></TextField>
				<Label id="guardianLbl" text="Veterinary information" class="labelTitle" ></Label>
				<TextField id="veterinarianProfile" hintText="Veterinarian" class="inputProfile"></TextField>
				<TextField id="addressVeterinarianProfile" hintText="Address" class="inputProfile"></TextField>
				<TextField id="phoneVeterinarianProfile" 	hintText="Phone " class="inputProfile"></TextField>
			</View>		
	</ScrollView>
</Alloy>