<Alloy>
	<ScrollView class="containerProfile" id="mainContainerProfile">
			<View class="blank"></View>
			<View id="mainImage">
				<ImageView id="imagenPrincipal" onClick="showGaleria"></ImageView>
				<View class="containerMainData">
					<Label id="tipo" class="yellowTitle" left="5"  ></Label>
					<Label id="movimiento" class="yellowTitle" left="5" ></Label>
					<Label id="colonia" class="whiteTitle" left="5" ></Label>
					<Label id="precio" class="price" left="5"></Label>
				</View>
			</View>
			<View class="layoutVertical" id="dataContainer">
				<Label id="descripcion" class="redTitle">Descripción</Label>
				<Label id="contentDescripcion" class="normalFont"></Label>
				<Label id="descripcion" class="redTitle">Características</Label>
				<View class="layoutHorizontal" >
					<View class="halfVertical">
						<View class="layoutHorizontal">
							<Label class="whiteBold">Plantas:</Label><Label id="plantas" class="whiteNormal"></Label>	
						</View>
						<View class="layoutHorizontal">
							<Label class="whiteBold">Recámaras:</Label><Label id="recamaras" class="whiteNormal"></Label>	
						</View>
						<View class="layoutHorizontal">
							<Label class="whiteBold">Baños:</Label><Label id="banos" class="whiteNormal"></Label>	
						</View>
						<View class="layoutHorizontal">
							<Label class="whiteBold">Medios baños:</Label><Label id="medios_banos" class="whiteNormal"></Label>	
						</View>
						<View class="layoutHorizontal">
							<Label class="whiteBold">Cochera:</Label><Label id="cochera" class="whiteNormal"></Label>	
						</View>
					</View>
					<View class="halfVertical">
						<View class="layoutHorizontal">
							<Label class="whiteBold">M2:</Label><Label id="superficie_terreno" class="whiteNormal"></Label>	
						</View>
						<View class="layoutHorizontal">
							<Label class="whiteBold">M2 Const.:</Label><Label id="superficie_construida" class="whiteNormal"></Label>	
						</View>
						<View class="layoutHorizontal">
							<Label class="whiteBold">Jardin:</Label><Label id="jardin" class="whiteNormal"></Label>	
						</View>
						<View class="layoutHorizontal">
							<Label class="whiteBold">Alberca:</Label><Label id="alberca" class="whiteNormal"></Label>	
						</View>
						<View class="layoutHorizontal">
							<Label class="whiteBold">Cuarto de Servicio:</Label><Label id="cuarto_servicio" class="whiteNormal"></Label>	
						</View>
					</View>
				</View>
				<Label class="redTitle">Asesor</Label>
				<View class="asesorContainer">
					<ImageView id="imagenAsesor" ></ImageView>
					<View class="containerMainData">
						<Label id="nombre_asesor" class="fontBoldWhite"></Label>
						<Label id="correo" class="whiteNormal"></Label>	
						<View class="layoutHorizontal">
							<Label  class="fontBoldWhite" >Celular</Label><Label id="celular" class="whiteNormal"></Label>	
						</View>
						<View class="layoutHorizontal">
							<Label  class="fontBoldWhite" >Oficina</Label><Label id="telefono" class="whiteNormal"></Label>	
						</View>
						<View class="layoutHorizontal">
							<Label  class="fontBoldWhite" >Otro</Label><Label id="telefono_oficina" class="whiteNormal"></Label>
						</View>
					</View>
					
				</View>
				<Button id="solicitarInformacion" title="Solicitar Informes"></Button>
				<View id="mapview" ns="Alloy.Globals.Map" />
			</View>	
			
	</ScrollView>
</Alloy>