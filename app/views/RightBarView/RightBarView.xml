<Alloy>
    <View class="container" isOpen="false">
       <View id="backgroundIosBar" class="backgroundIosBar"></View>
       <View id="groupContainer" class="groupContainer">
           <View class="titleContainer">
               <Label id="titleLbl" class="titleLbl boldLbl">Neighborhoods</Label>
               <Button class="addAddress" onClick="addAddress"/>
           </View>
           <View id="blueLine" class="blueLine"></View>
           <View id="searchContainer" class="searchContainer">
           	   <View id="search_tf_view"></View>
               <Button class="clearSearch"/>
               <Button id="searchAddress" class="buttonWhite searchButton" onClick="searchAddress">Search</Button>
           </View>
           <ScrollView id="groupsList" class="groupsList">
               <View id="groupListContainer" class="groupListContainer">
                   <View  class="groupListTitleContainer">
                     <Label id="groupListTitle" class="groupListTitle">My Neighborhoods</Label>
                   </View>
                   <View id="addressContainer" layout="vertical" height="Ti.UI.SIZE"></View>
               </View>
               
               <View id="recentlyFoundContainer" class="groupListContainer">
                   <View  class="groupListTitleContainer">
                     <Label class="groupListTitle">Recently Found</Label>
                   </View>
                   <View id="rencentlyContainer" layout="vertical" height="Ti.UI.SIZE"></View>
               </View>
           </ScrollView>
       </View>
       <View class="shadowImage"></View>
    </View>
</Alloy>