<Alloy>
	<View id="commentView" class="commentView">
        <View class="commentHeader">
            <ImageView id="imageUser" class="imageUser"></ImageView>
            <Label id="titleLbl" class="titleLbl"></Label>
            <Label id="subTitleLbl" class="subTitleLbl"></Label>
            <Button id="commentOptions" onClick="openOptions"/>
        </View>
        <View class="commentContent">
            <Label id="hrefLbl" class="hrefLbl" onClick="openURL">Go to Full Story</Label>
            <Label id="textLbl" class="textLbl" onClick="goTo"></Label>
            <ImageView id="commentImage" class="commentImage" onClick="goTo"></ImageView>
        </View>
        <View id="commentFooter" class="commentFooter">
            <View class="likesContainer">
                <Button class="likeIcon" onClick="likeComment"/>
                <Label id="likeLbl">13 likes</Label>
            </View>
            <View class="repliesContainer" onClick="openNextWindow">
                <Label id="repliesLbl"/>
                <Button class="repliesIcon"/>
            </View>
        </View>
    </View>
</Alloy>