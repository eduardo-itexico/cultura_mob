<Alloy>
	<View class="container">
	    <View class="topContainer">
	    	<View id="streaming"/>
	        <TextField id="textFldHide"/>
    	    <Button class="addPhoto" onClick="addPhoto"/>
    	    <ImageView id="postImage"/>
    	    <View id="high_prior">
	    	    <Label id="highPrior"/>
	    	    <Switch id="highPriorSwitch"/>
    	    </View>
    	    <TextArea id="textFld" onFocus="normalize" onChange="clearHint"/>
    	</View>
	    <View id="messageTypeContainer" onClick="selectMessageType">
	        <Label id="messageTypeLabel" NCTType="0"/>
	        <ImageView id="messageTypeArrow" class="arr_down"/>
	        <Label id="notifLbl"/>
            <Switch id="notifSwitch"/>
	    </View>
	    <View class="absolute">
		    <Button class="cancelBtn" onClick="closePopup"/>
		    <Button class="sendBtn" onClick="sendPost"/>
	    </View>
	</View>
</Alloy>