<Alloy>
	<ScrollView class="container">
		<View class="blank"/>
		<TableView id="contentInmueble">
			<TableViewSection headerTitle="Búsqueda" class="titleHeader">
				<TableViewRow>
					<Label class="normalBold">Movimiento:</Label>
					<TextField id="movimiento"  class="inputProfile" onClick="clickFields" enabled="false"></TextField>		
				</TableViewRow>	
				<TableViewRow>
					<Label class="normalBold">Tipo:</Label>
					<TextField id="inmueble" class="inputProfile" onClick="clickFields" enabled="false"></TextField>		
				</TableViewRow>
				<TableViewRow>
					<Label class="normalBold">Precio desde:</Label>
					<TextField id="precio_desde" class="inputProfile" onClick="clickFields" enabled="false"></TextField>		
				</TableViewRow>
				<TableViewRow>
					<Label class="normalBold">Precio hasta:</Label>
					<TextField id="precio_hasta" class="inputProfile" onClick="clickFields" enabled="false"></TextField>		
				</TableViewRow>
				<TableViewRow>
					<Label class="normalBold">Colonia:</Label>
					<TextField id="campoClave"  class="inputProfile"></TextField>		
				</TableViewRow>
			</TableViewSection>
			<TableViewSection headerTitle="Avanzada" class="titleHeader">
				<TableViewRow>
					<Label class="normalBold">Plantas:</Label>
					<TextField id="plantas"  class="inputHalfProfile" value="0"></TextField>
	        		<Button class="btnAdd" onClick="clickSpinner" direction="increase"></Button>
	        		<Button class="btnMinus"onClick="clickSpinner" direction="decrease"></Button>		
				</TableViewRow>
				<TableViewRow>
					<Label class="normalBold">Recámaras:</Label>
					<TextField id="recamaras"  class="inputHalfProfile" value="0"></TextField>
	        		<Button class="btnAdd" onClick="clickSpinner" direction="increase"></Button>
	        		<Button class="btnMinus"onClick="clickSpinner" direction="decrease"></Button>		
				</TableViewRow>
				<TableViewRow>
					<Label class="normalBold">Baños:</Label>
					<TextField id="banos"  class="inputHalfProfile" value="0"></TextField>
	        		<Button class="btnAdd" onClick="clickSpinner" direction="increase"></Button>
	        		<Button class="btnMinus"onClick="clickSpinner" direction="decrease"></Button>		
				</TableViewRow>
				<TableViewRow>
					<Label class="normalBold">Medios Baños:</Label>
					<TextField id="mediosBanos"  class="inputHalfProfile" value="0"></TextField>
	        		<Button class="btnAdd" onClick="clickSpinner" direction="increase"></Button>
	        		<Button class="btnMinus"onClick="clickSpinner" direction="decrease"></Button>		
				</TableViewRow>
				<TableViewRow>
					<Label class="normalBold">Cochera:</Label>
					<TextField id="cochera"  class="inputHalfProfile" value="0"></TextField>
	        		<Button class="btnAdd" onClick="clickSpinner" direction="increase"></Button>
	        		<Button class="btnMinus"onClick="clickSpinner" direction="decrease"></Button>		
				</TableViewRow>
				<TableViewRow>
					<Label class="normalBold">Sup. m2 desde:</Label>
					<TextField id="superficieDesde"  class="inputHalfProfile" value="0" step="100"></TextField>
	        		<Button class="btnAdd" onClick="clickSpinner" direction="increase"></Button>
	        		<Button class="btnMinus"onClick="clickSpinner" direction="decrease"></Button>		
				</TableViewRow>
				<TableViewRow>
					<Label class="normalBold">Sup. m2 hasta:</Label>
					<TextField id="superficieHasta"  class="inputHalfProfile" value="0" step="100"></TextField>
	        		<Button class="btnAdd" onClick="clickSpinner" direction="increase"></Button>
	        		<Button class="btnMinus"onClick="clickSpinner" direction="decrease"></Button>		
				</TableViewRow>
				<TableViewRow>
					<Label class="normalBold">$ m2 desde:</Label>
					<TextField id="precioM2Desde"  class="inputHalfProfile" value="0" step="1000"></TextField>
	        		<Button class="btnAdd" onClick="clickSpinner" direction="increase"></Button>
	        		<Button class="btnMinus"onClick="clickSpinner" direction="decrease"></Button>		
				</TableViewRow>
				<TableViewRow>
					<Label class="normalBold">$ m2 hasta:</Label>
					<TextField id="precioM2Hasta"  class="inputHalfProfile" value="0" step="1000"></TextField>
	        		<Button class="btnAdd" onClick="clickSpinner" direction="increase"></Button>
	        		<Button class="btnMinus"onClick="clickSpinner" direction="decrease"></Button>		
				</TableViewRow>
			</TableViewSection>
		</TableView>
		
		
	</ScrollView>
</Alloy>